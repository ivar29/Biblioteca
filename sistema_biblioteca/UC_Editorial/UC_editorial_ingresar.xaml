<UserControl x:Class="Sistema_Biblioteca.UC_Editorial.UC_editorial_ingresar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="504" Height="179">
    <Grid>
        <GroupBox Header="Ingreso Editorial" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="164" Width="480">
            <Label x:Name="mensajeerror" Content="" HorizontalAlignment="Left" Margin="74,10,0,0" VerticalAlignment="Top" Width="185" Foreground="#FFCB0808"/>
        </GroupBox>
        <TextBox x:Name="txt_editorial" MaxLength="50" HorizontalAlignment="Left" Height="23" Margin="86,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="382"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Height="26" Margin="25,63,0,0" VerticalAlignment="Top" Width="56"/>
        <Button x:Name="btn_guardar" Content="Guardar" HorizontalAlignment="Left" Height="26" Margin="398,135,0,0" VerticalAlignment="Top" Width="70" Click="button_guardar_editorial"/>
        <Button x:Name="btn_cancelar" Content="Limpiar" HorizontalAlignment="Left" Height="26" Margin="323,135,0,0" VerticalAlignment="Top" Width="70" Click="btn_cancelar_Click"/>

    </Grid>
</UserControl>
